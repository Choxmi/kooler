<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvSingle_Comment_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anonymous"
            android:textColor="#717171"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvSingle_Comment_Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="Sept 26, 2014"
            android:textColor="#717171"
            android:textSize="13sp" />
    </LinearLayout>

    <RatingBar
        android:id="@+id/rbSingle_Comment_rating"
        style="@style/RatingBarLarge"
        android:layout_width="80dp"
        android:layout_height="18dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:isIndicator="true"
        android:max="5"
        android:numStars="5"
        android:rating="4" />

    <TextView
        android:id="@+id/tvSingle_Comment_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/lorem"
        android:textColor="#a3a3a3"
        android:layout_marginBottom="20dp"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:background="@color/vertical_divider_welcome" />

</LinearLayout>